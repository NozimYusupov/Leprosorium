<h4>Post details: </h4>
<br/>
<p>
  <%= @row['content'] %>
  <br>
  Added at: <%= @row['create_date'] %>
  <br>
</p>
<br>
<h4>Comments: </h4>
<br>
<% @comments.each do |comment| %>
  <p>
    <%= comment['content'] %>
    <br>
    <span style="font-size=75%; color: #999"> Added at: <%= comment['create_date'] %></span>
  </p>
  <hr>
<% end %>
<p>
<form action="/details/<%= @row['id'] %>" method="POST" role="form">
    <div class="form-group">
      <textarea name="content" class="form-control" rows="6" placeholder="Type comment text"></textarea>
    </div>
    <br>  
   <button type="submit" class="btn btn-primary">Add Comments</button>
   </form>
 </p>
